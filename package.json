{
  "name": "richtypo",
  "version": "0.0.0-development",
  "description": "HTML typography enhancer for English and Russian texts",
  "homepage": "https://github.com/sapegin/richtypo.js",
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sapegin/richtypo.js.git"
  },
  "bugs": {
    "url": "https://github.com/sapegin/richtypo.js/issues"
  },
  "license": "MIT",
  "main": "./richtypo.js",
  "files": [
    "richtypo.js",
    "rules"
  ],
  "engines": {
    "node": ">=6"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^5.1.0",
    "eslint-config-tamia": "^6.0.0",
    "fledermaus": "^4.0.0",
    "gh-pages": "^1.2.0",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "semantic-release": "^6.3.6",
    "semantic-release-tamia": "^1.1.1"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run test:jest",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --cache --fix",
    "postpublish": "npm run example && npm run gh-pages",
    "example": "node --harmony example/src",
    "gh-pages": "gh-pages -d example",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "typography",
    "typo",
    "html",
    "quotes",
    "prepositions",
    "abbr",
    "abbreviations",
    "nobr",
    "nbsp",
    "punctuation",
    "em-dash",
    "ampersands",
    "russian",
    "english"
  ],
  "tonicExampleFilename": "example/example.js",
  "release": {
    "analyzeCommits": "semantic-release-tamia/analyzeCommits",
    "generateNotes": "semantic-release-tamia/generateNotes",
    "verifyRelease": "semantic-release-tamia/verifyRelease"
  }
}
